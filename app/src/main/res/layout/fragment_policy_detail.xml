<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.utn.appsure.viewmodel.PolicyDetailViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/policy_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/policy_poster"
                android:layout_width="187dp"
                android:layout_height="62dp"
                android:layout_weight="1"
                android:src="@drawable/car" />

        </LinearLayout>


        <EditText
            android:id="@+id/txtPatent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Patente "
            android:inputType="text"
            android:text="@={viewmodel.patent}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/txtBrand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:hint="Marca"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:text="@={viewmodel.brand}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/txtModel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:hint="Modelo"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:text="@={viewmodel.model}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/txtYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:hint="AÃ±o"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:text="@={viewmodel.year}" />

            <EditText
                android:id="@+id/txtColour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Color"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:text="@={viewmodel.colour}" />
        </LinearLayout>

    </LinearLayout>

</layout>