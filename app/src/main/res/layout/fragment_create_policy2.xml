<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.utn.appsure.viewmodel.CreatePolicyViewModel2" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/label_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:gravity="top|center"
            android:text="@{viewmodel.createPolicyText}" />

        <EditText
            android:id="@+id/txtPatent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="Patente"
            android:text="@={viewmodel.patent}"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp">

            <EditText
                android:id="@+id/txtBrand"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="Marca"
                android:text="@={viewmodel.brand}"
                android:inputType="text"
                android:selectAllOnFocus="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="95dp">

            <EditText
                android:id="@+id/txtModel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@={viewmodel.model}"
                android:hint="Modelo"
                android:inputType="text"
                android:selectAllOnFocus="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="130dp">

            <EditText
                android:id="@+id/txtYear"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@={viewmodel.year}"
                android:hint="AÃ±o"
                android:inputType="number"
                android:selectAllOnFocus="true" />

            <EditText
                android:id="@+id/txtColour"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@={viewmodel.colour}"
                android:hint="Color"
                android:inputType="text"
                android:selectAllOnFocus="true" />
        </LinearLayout>

        <Button
            android:id="@+id/btnGeneratePolicy"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:onClick="@{viewmodel::generatePolicy}"
            android:text="@{viewmodel.generatePolicy}" />

    </RelativeLayout>

</layout>