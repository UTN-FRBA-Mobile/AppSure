<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_policy"
    app:startDestination="@id/main_list">
    <fragment
        android:id="@+id/main_list"
        android:name="com.utn.appsure.fragment.CreatePolicyFragment"
        android:label="Policy"
        tools:layout="@layout/fragment_create_policy">
        <action
            android:id="@+id/action_main_list_to_policy"
            app:destination="@id/policy"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/policy"
        android:name="com.utn.appsure.fragment.CreatePolicyFragment"
        android:label="Create Policy"
        tools:layout="@layout/fragment_create_policy" />
</navigation>